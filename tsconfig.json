{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "es2019"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "build",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "paths": {
      "app/*": ["./app/*"]
    }
  },
  "exclude": ["build", "node_modules"]
}
