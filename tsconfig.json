{
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "baseUrl": "src",
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "es6",
    "moduleResolution": "node",
    // can comment!
    //    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    /**
    * Even multiline!
    **/
    "outDir": "build",
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    //    "target": "es5",
    "target": "esnext",
    // for bigint, possible caveats?
    "paths": {
      "app/*": [
        "./app/*"
      ]
    }
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}
